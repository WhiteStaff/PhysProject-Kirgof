<Window
    x:Class="PhysProject_Kirgof.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PhysProject_Kirgof"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PhysProject_Kirgof.ViewModels"
    Title="MainWindow"
    Width="525"
    Height="350"
    mc:Ignorable="d">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Canvas Name="myCanvas">
        <StackPanel
            Canvas.Left="10"
            Canvas.Top="10"
            Width="210"
            Height="41"
            Orientation="Horizontal">
            <Label
                Margin="5"
                VerticalContentAlignment="Center"
                Content="R1 = " />
            <TextBox
                Name="R1"
                Width="54"
                Margin="5"
                VerticalContentAlignment="Center"
                Text="{Binding First.Value}"
                TextAlignment="Center" />
            <CheckBox
                VerticalAlignment="Center"
                Content="IsEnable"
                IsChecked="{Binding First.IsEnable}" Checked="CheckBoxR1_Checked" Unchecked="CheckBoxR1_UnChecked"/>
        </StackPanel>
        <StackPanel
            Canvas.Left="10"
            Canvas.Top="92"
            Width="210"
            Height="41"
            Orientation="Horizontal">
            <Label
                Margin="5"
                VerticalContentAlignment="Center"
                Content="R3 = " />
            <TextBox
                Name="R3"
                Width="54"
                Margin="5"
                VerticalContentAlignment="Center"
                Text="{Binding Third.Value}"
                TextAlignment="Center" />
            <CheckBox
                VerticalAlignment="Center"
                Content="IsEnable"
                IsChecked="{Binding Third.IsEnable}" Checked="CheckBoxR3_Checked" Unchecked ="CheckBoxR3_UnChecked"/>
        </StackPanel>
        <StackPanel
            Canvas.Left="10"
            Canvas.Top="51"
            Width="210"
            Height="41"
            Orientation="Horizontal">
            <Label
                Margin="5"
                VerticalContentAlignment="Center"
                Content="R2 = " />
            <TextBox
                Name="R2"
                Width="54"
                Margin="5"
                VerticalContentAlignment="Center"
                Text="{Binding Second.Value}"
                TextAlignment="Center" />
            <CheckBox
                VerticalAlignment="Center"
                Content="IsEnable"
                IsChecked="{Binding Second.IsEnable}" Checked="CheckBoxR2_Checked" Unchecked="CheckBoxR2_UnChecked" Margin="0,12,0,13"/>
        </StackPanel>
        <Button
            Canvas.Left="392"
            Canvas.Top="108"
            Width="75"
            Command="{Binding Test}"
            Content="Calculate" />

        <TextBlock
            Canvas.Left="418"
            Canvas.Top="61"
            Text="{Binding I2}"
            TextWrapping="Wrap" />
        <TextBlock
            Canvas.Left="418"
            Canvas.Top="85"
            Text="{Binding I3}"
            TextWrapping="Wrap" />
        <StackPanel 
            Canvas.Left="10"
